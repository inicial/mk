                                            <LinearColorKeyFrame Value="ForestGreen" KeyTime="0:0:0.25"/>
                                            <LinearColorKeyFrame Value="#00228B22" KeyTime="0:0:0.25"/>
                                            <LinearColorKeyFrame Value="#00228B22" KeyTime="0:0:0.5"/>
                                        </ColorAnimationUsingKeyFrames>
                                    </Storyboard>
