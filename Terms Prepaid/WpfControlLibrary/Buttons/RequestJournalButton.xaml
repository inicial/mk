                <TextBlock Margin="5,0,0,0" Text="{Binding UnansweredRequestsMtCCount}" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Margin="0,1,0,0" Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
