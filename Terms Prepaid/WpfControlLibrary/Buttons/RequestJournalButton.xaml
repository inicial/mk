                                <BeginStoryboard>
                                    <Storyboard TargetProperty="Background">
                                        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" Duration="0:0:0.5" 
