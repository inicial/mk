<UserControl x:Class="WpfControlLibrary.Buttons.GotoLkButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WPF.Bootstrap;component/Themes/Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
        <Button Height="22" FontSize="14" FontFamily="Arial" FontWeight="Bold" Style="{StaticResource WarningButton}" Width="90" Click="Button_Click">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="11" FontFamily="Arial" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,0,0"><Run Text="Перейти в ЛК"/></TextBlock>
            </StackPanel>
        </Button>
    </StackPanel>
</UserControl>
