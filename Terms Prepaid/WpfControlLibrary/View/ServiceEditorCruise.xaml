                           Width="170"
                           Padding="10,0,1,0"
                           TextAlignment="Left"
                           Text="Состояние" />
                    <Line Style="{StaticResource HeaderLine}"/>
                    -->
                    <TextBlock Name="tblHeaderEdit" 
                           Style="{StaticResource ServiceHeaderTextBlock}" 
                           Width="74"
                           Padding="0,0,0,0"
                           TextAlignment="Center"
                           Text="Изменить" />
                    <Line Style="{StaticResource HeaderLine}"/>
                    <TextBlock Name="tblHeaderAnnul" 
                           Style="{StaticResource ServiceHeaderTextBlock}" 
                           Width="99"
                           Padding="0,0,0,0"
                           TextAlignment="Center"
                           Text="Аннулировать" />
                    <!--
                    <TextBlock Name="tblHeaderEdit" 
                           Style="{StaticResource ServiceHeaderTextBlock}" 
